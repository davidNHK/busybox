{
  "name": "busybox",
  "version": "1.0.0",
  "license": "MIT",
  "author": "David Ng <david.ng.dev@gmail.com>",
  "repository": "git@github.com:davidNHK/busybox.git",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "eslint": "eslint --fix --ext=ts,js",
    "lint:js": "yarn eslint .",
    "lint:package-json": "yarn npmPkgJsonLint ."
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-lerna-scopes": "9.1.1",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.6.0",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "npm-package-json-lint": "5.1.0",
    "prettier": "2.0.5",
    "typescript": "3.9.7"
  },
  "engines": {
    "node": ">=12"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn lerna run test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
