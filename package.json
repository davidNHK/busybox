{
  "name": "busybox",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:davidNHK/busybox.git",
  "author": "David Ng <david.ng.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "9.1.1",
    "@commitlint/config-lerna-scopes": "9.1.1",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.6.0",
    "husky": "4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "typescript": "3.9.7"
  },
  "scripts": {
    "eslint": "eslint --ext=ts,tsx,js --resolve-plugins-relative-to=packages/eslint-config",
    "lint": "yarn eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lerna run test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "yarn eslint --fix"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
